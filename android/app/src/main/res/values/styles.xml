<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">
            #2043b5
        </item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/empty
        </item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">
            #2043b5
        </item>
        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">
            @null
        </item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">#2043b5</item>
        <item name="android:colorPrimaryDark">#2043b5</item>
    </style>
</resources>
